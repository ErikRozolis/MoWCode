<Window x:Class="Meals_On_Wheels.DeleteRouteConfirmation"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Meals_On_Wheels"
        mc:Ignorable="d"
        Title="Confirmation" Height="150" Width="200">
    <Grid>
        <TextBlock HorizontalAlignment="Center" Margin="30,30,30,0" TextWrapping="Wrap" Text="Are you sure you want to delete this route?" VerticalAlignment="Top" Foreground="Red"/>
        <Button Content="Confirm" HorizontalAlignment="Center" Margin="0,80,0,0" VerticalAlignment="Top" Width="75" Click="Button_Click"/>

    </Grid>
</Window>
